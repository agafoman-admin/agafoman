<odoo>
    <data>
        <record id="paperformat_quotation_certificate" model="report.paperformat">
            <field name="name">Tender Details</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">34</field>
            <field name="margin_bottom">18</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_spacing">30</field>
            <field name="dpi">85</field>
        </record>
        <report id="quotation_certificate_report"
                string="Tender Details"
                model="sale.order"
                report_type="qweb-pdf"
                file="AGAF_sales.quotation_certificate_template"
                name="AGAF_sales.quotation_certificate_template"
                print_report_name="'Quotation - %s' % (object.name)"
                menu="False"
        />

        <record id="AGAF_sales.quotation_certificate_report" model="ir.actions.report">
            <field name="paperformat_id" ref="AGAF_sales.paperformat_quotation_certificate"/>
        </record>
    </data>
</odoo>