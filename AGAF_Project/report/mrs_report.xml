<odoo>
    <template id="external_layout_slip">
        <t t-if="not o and doc">
            <t t-set="o" t-value="doc"/>
        </t>
        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id"></t>
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company"></t>
        </t>
        <div>
            <t t-call="AGAF_Project.basic_layout_header_rfq"/>
            <div t-attf-class="article o_report_layout_standard o_company_#{company.id}_layout"
                 t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id">
                <t t-out="0"/>
            </div>
            <t t-call="AGAF_Project.basic_layout_footer_rfq"/>
        </div>
    </template>

    <template id="basic_layout_header_rfq">
        <div t-attf-class="header o_company_#{company.id}_layout">
            <div class="o_boxed_header">
                <div class="row mb8">
                    <div class="col-3">
                        <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" style="max-height: 35px;"
                             alt="Logo"/>
                    </div>
                </div>
            </div>
            <div style="border-bottom: 1px solid #6C1621;"/>
        </div>
    </template>

    <template id="basic_layout_footer_rfq">
        <t t-call="web.html_container">
            <t t-if="not o" t-set="o" t-value="doc"/>
            <div t-attf-class="footer o_boxed_footer">
                <table class="table table-borderless mb64"
                       style="width:100%;page-break-inside: avoid;">
                    <thead>
                        <tr>
                            <th style="text-align:left;">Printed By:
                                <span t-field="o.env.user.name"/>
                                -
                                <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%d/%m/%Y %H:%M')"/>
                            </th>
                            <th style="text-align:right;">
                                <span t-field="o.name"/>
                            </th>
                        </tr>
                        <tr>
                            <th colspan="2" style="text-align:center">
                                Page:
                                <span class="page"/>
                                of
                                <span class="topage"/>
                            </th>
                        </tr>
                    </thead>
                </table>
            </div>
        </t>
    </template>

    <template id="material_requisition_slip_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="AGAF_Project.external_layout_slip">
                    <b>
                        <h3 style="text-align: center;">
                            <th>Material Requisition Slip</th>
                        </h3>
                    </b>
                    <br/>
                    <br/>
                    <div class="row">
                        <div class="col-6" style="margin-left:1em;">
                            <ul style="list-style: none;display: table;">
                                <li style="display: table-row;"><b style="display: table-cell;padding-right: 1em;">
                                    Requisition No</b>:
                                    <t t-esc="o.name"/>
                                </li>
                                <br/>

                                <li style="display: table-row;"><b style="display: table-cell;padding-right: 1em;">
                                    Project</b>:
                                    <t t-esc="o.project_id.name"/>
                                </li>
                                <br/>
                                <li style="display: table-row;"><b style="display: table-cell;padding-right: 1em;">
                                    Task</b>:
                                    <t t-esc="o.task_id.name"/>
                                </li>
                                <br/>
                                <li style="display: table-row;"><b style="display: table-cell;padding-right: 1em;">
                                    Phase</b>:
                                    <t t-esc="o.phase_id.name"/>
                                </li>
                                <br/>
                                <li style="display: table-row;"><b style="display: table-cell;padding-right: 1em;">
                                    Status</b>:
                                    <span t-field="o.state"/>
                                </li>
                                <br/>
                                </ul>
                        </div>
                        <div class="col-6">
                            <ul style="list-style: none;display: table;">
                                <li style="display: table-row;"><b style="display: table-cell;padding-right: 1em;">
                                    Department</b>:
                                    <t t-esc="o.department_id.name"/>
                                </li>
                                <br/>
                                <li style="display: table-row;"><b style="display: table-cell;padding-right: 1em;">
                                    Request Date:</b>:
                                    <t t-esc="o.request_date"/>
                                </li>
                                <br/>
                                <li style="display: table-row;"><b style="display: table-cell;padding-right: 1em;">
                                    Requestor Name</b>:
                                    <t t-esc="o.requestor_name.name"/>
                                </li>
                                <br/>
                                <li style="display: table-row;"><b style="display: table-cell;padding-right: 1em;">
                                    Company</b>:
                                    <t t-esc="o.company_id.name"/>
                                </li>
                                <br/>

                            </ul>
                        </div>
                    </div>
                    <br/>
                    <br/>
                    <table class="table table-bordered mb64"
                           style="width:100%;page-break-inside: avoid;border-color:black">
                        <thead>
                            <tr style="background-color:green;">
                                <th style="width:15%;">S.No.</th>
                                <th style="width:35%;">Item Description</th>
                                <th style="width:25%;">Unit of Measurement</th>
                                <th style="width:25%;">Required Quantity</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="o.slip_line_ids" t-as="p">
                                <tr style="text-align: center">
                                    <td>
                                        <span t-esc="p_index+1"/>
                                    </td>
                                    <td>
                                        <t t-if="p.product_id.default_code">
                                            [<span t-esc="p.product_id.default_code"/>]<span t-esc="p.product_id.name"/>
                                        </t>
                                        <t t-else="">
                                            <span t-esc="p.product_id.name"/>
                                        </t>
                                    </td>
                                    <td>
                                        <span t-esc="p.uom_id.name"/>
                                    </td>
                                    <td>
                                        <span t-esc="'{0:,.2f}'.format(p.product_qty)"/>
                                    </td>


                                </tr>
                            </t>

                        </tbody>
                    </table>
                    <br/>
                    <br/>
                    <br/>
                    <br/>
                    <b>
                        <div class="row" >
                            <div class="col-6" style="margin-left:3em;">Requested By:
                            </div>
                            <div class="col-6">Requested Comments:
                            </div>
                        </div>
                    </b>
                    <br/>

                    <div class="row" >
                        <div class="col-6" style="margin-left:3em;">
                            <span t-field="o.requested_by.name"/>
                        </div>
                        <div class="col-6">
                            <span t-field="o.requested_comments"/>
                        </div>
                    </div>

                    <br/>
                    <br/>
                    <b>
                        <div class="row" >
                            <div class="col-6" style="margin-left:3em;">Approved By:
                            </div>
                            <div class="col-6">Approved Date:
                            </div>
                        </div>
                    </b>
                    <br/>

                    <div class="row" >
                        <div class="col-6" style="margin-left:3em;">
                            <span t-field="o.approved_by.name"/>
                        </div>
                        <div class="col-6">
                            <span t-field="o.approved_date"/>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>