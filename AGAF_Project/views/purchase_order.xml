<odoo>
    <data>
        <record id="purchase_order_form_agaf" model="ir.ui.view">
            <field name="name">purchase.order</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <field name="incoterm_location" position="after">
                    <field name="project_id" readonly="1"/>
                    <field name="phase_id" readonly="1"/>
                    <field name="is_subcontracting_po"/>
                </field>
            </field>
        </record>

        <record id="purchase_order_search_inherit_agaf" model="ir.ui.view">
            <field name="name">purchase.order</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.view_purchase_order_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='activities_upcoming_all']" position="after">
                    <filter string="Phase" name="phase_id" domain="[('phase_id', '!=', False)]"/>
                    <filter string="Project" name="project_id" domain="[('project_id', '!=', False)]"/>
                </xpath>
                <group position="inside">
                    <filter string="Phase" name="phase_id" domain="[]" context="{'group_by': 'phase_id'}"/>
                    <filter string="Project" name="project_id" domain="[]" context="{'group_by': 'project_id'}"/>
                    <filter string="Is Subcontracting PO" name="is_subcontracting_po" domain="[]" context="{'group_by': 'is_subcontracting_po'}"/>
                </group>
                <field name="product_id" position="after">
                    <field name="phase_id"/>
                    <field name="project_id"/>
                </field>
            </field>
        </record>

        <record id="purchase_order_search_inherit_agaf_po" model="ir.ui.view">
            <field name="name">purchase.order</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_view_search"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='activities_upcoming_all']" position="after">
                    <filter string="Phase" name="phase_id" domain="[('phase_id', '!=', False)]"/>
                    <filter string="Project" name="project_id" domain="[('project_id', '!=', False)]"/>
                </xpath>
                <group position="inside">
                    <filter string="Phase" name="phase_id" domain="[]" context="{'group_by': 'phase_id'}"/>
                    <filter string="Project" name="project_id" domain="[]" context="{'group_by': 'project_id'}"/>
                    <filter string="Is Subcontracting PO" name="is_subcontracting_po" domain="[]" context="{'group_by': 'is_subcontracting_po'}"/>
                </group>
                <field name="product_id" position="after">
                    <field name="phase_id"/>
                    <field name="project_id"/>
                </field>
            </field>
        </record>

        <record id="view_my_wizard_form" model="ir.ui.view">
        <field name="name">agaf.po_wizard</field>
        <field name="model">agaf.po_wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="partner_id"/>
                </group>
                <footer>
                    <button string="Confirm" class="oe_highlight" type="object" name="button_confirm"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
</record>

    </data>
</odoo>