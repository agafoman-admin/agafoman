<odoo>
    <data>
        <record id="phase_stage_form" model="ir.ui.view">
            <field name="name">phase.stage.form</field>
            <field name="model">phase.stage</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <form string="Phase Stage">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" required="1"/>
                            </group>
                            <group>
                                <field name="description"/>
                            </group>
                        </group>
                        <group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="phase_stage_tree" model="ir.ui.view">
            <field name="name">phase.stage.form</field>
            <field name="model">phase.stage</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="phase_stage_action">
            <field name="name">Phase Stages</field>
            <field name="res_model">phase.stage</field>
            <field name="view_mode">tree,form</field>
            <field name="type">ir.actions.act_window</field>
        </record>

        <menuitem
                id="phase_stage_menu"
                name="Phase Stages"
                parent="project.menu_project_config"
                action="phase_stage_action"
        />
    </data>
</odoo>